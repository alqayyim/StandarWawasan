<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:layout_gravity="bottom">

    <com.folioreader.ui.view.StyleableTextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Page "
        android:textSize="22sp"
        app:folio_font="@string/raleway_bold_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.folioreader.ui.view.StyleableTextView
        android:id="@+id/tvCountPage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLength="3"
        android:gravity="end"
        android:text="200"
        android:textSize="22sp"
        app:folio_font="@string/raleway_bold_font"
        app:layout_constraintStart_toEndOf="@id/tvPage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.folioreader.ui.view.StyleableTextView
        android:id="@+id/tvMaxPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="/200"
        android:textSize="22sp"
        app:folio_font="@string/raleway_bold_font"
        app:layout_constraintStart_toEndOf="@id/tvCountPage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp"
            android:layout_marginTop="48dp"
            app:isb_max="200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPage"
            app:isb_indicator_text_size="15sp"
            app:isb_show_indicator="circular_bubble"
            app:isb_track_background_color="@color/color_gray"
            app:isb_indicator_color="@color/colorSeekbar"
            app:isb_track_progress_color="@color/colorSeekbar"
            app:isb_thumb_color="@color/colorSeekbar"
            app:isb_track_progress_size="4dp" />
